{
	"include": ["./src/**/*"],
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"checkJs": true,
		"lib": ["DOM", "ESNext"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["naive-ui/volar", "vite/client"],
		"allowJs": true,
		"jsx": "preserve"
	},
	"vueCompilerOptions": {
		"experimentalDowngradePropsAndEmitsToSetupReturnOnScriptSetup": true
	}
}
